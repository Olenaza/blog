{% extends "::base.html.twig" %}

{% block title %}Подорожі{% endblock %}

{% block content %}

    <h4>{{ wo_render_breadcrumbs({separator: ''}) }}</h4>

    <h3>{{ post.title }}</h3>
    <hr>
    <div>{{ post.text }}</div>
    <br>
    <h4>Теги:</h4>
    <ul>
        {% for tag in post.tags %}

            <li>
                <a href="{{ path('posts_list_by_tag', {'name': tag.name}) }}">{{ tag.name }}</a>
            </li>

        {% endfor %}
    </ul>
    <br>
    {{ form(likeForm) }}

    {% if post.comments %}
        <br>
        <h4>Коментарі:</h4>

        <div class="panel-group">
            <div class="panel panel-default">

                {% for comment in post.comments %}

                    <div class="panel-heading">

                        {{ comment.user }}

                        {{ comment.updatedAt is empty ?
                            ["Опублікований: ", comment.publishedAt|date("d/m/Y")]|join :
                            ["Відредагований: ", comment.updatedAt|date("d/m/Y")]|join}}
                    </div>
                    <div class="panel-body">{{ comment.text }}</div>

                {% endfor %}
            </div>
        </div>
    {% endif %}
    <br>
    {% if commentForm is defined %}
        {{ form(commentForm) }}

    {% else %}
        <h4>! Будь ласка, авторизуйтесь, щоб залишити коментар.<h4>
    {% endif %}
{% endblock %}
