{% extends "::base.html.twig" %}

{% block title %}Подорожі{% endblock %}

{% block content %}

    <h4>{{ wo_render_breadcrumbs({separator: ''}) }}</h4>

    <h3>{{ post.title }}</h3>
    <hr>
    <div>{{ post.text }}</div>
    <br>
    <h4>Теги:</h4>
    <ul>
        {% for tag in post.tags %}

            <li>
                <a href="{{ path('posts_list_by_tag', {'name': tag.name}) }}">{{ tag.name }}</a>
            </li>

        {% endfor %}
    </ul>

    <form action="{{ path('post_like', {'slug': post.slug, 'username': app.user.username}) }}">
        <button type="submit" class="btn btn-default">Вподобати</button>
    </form>

    {% if post.comments %}
        <br>
        <h4>Коментарі:</h4>

        <div class="panel-group">
            <div class="panel panel-default">

                {% for comment in post.comments %}

                    <div class="panel-heading">

                        {{ comment.updatedAt is empty ?
                            ["Опублікований: ", comment.publishedAt|date("d/m/Y")]|join :
                            ["Відредагований: ", comment.updatedAt|date("d/m/Y")]|join}}
                    </div>
                    <div class="panel-body">{{ comment.text }}</div>

                {% endfor %}
            </div>
        </div>
    {% endif %}
    <br>
    {{ form(form) }}

{% endblock %}
